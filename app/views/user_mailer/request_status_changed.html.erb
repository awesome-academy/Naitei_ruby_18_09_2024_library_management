<div class="max-w-md mx-auto bg-white shadow-lg rounded-lg overflow-hidden p-6">
  <h1 class="text-2xl font-bold text-blue-700 mb-4 text-center"><%= Settings.app_name %></h1>

  <div class="bg-gray-50 p-4 rounded-md">
    <p class="text-lg mb-2">
      <%= t "text.hi" %> <span class="font-semibold text-gray-800"><%= @user.name %></span>,
    </p>

    <p class="mb-3 text-gray-700">
      <%= t "mail.status_changed.p1" %>
      <span class="font-bold">
        <%= @status %>
      </span>.
    </p>

    <p class="text-gray-600 italic">
      <%= link_to t("mail.status_changed.click_here"),
          requests_url,
          class: "text-blue-500 hover:text-blue-700 underline font-medium" %>
      <%= t "mail.status_changed.p2" %>
    </p>
  </div>

  <div class="mt-4 text-center text-xs text-gray-500">
    <%= t "mail.status_changed.footer", year: Date.current.year %>
  </div>
</div>
