<div id="popup-form" class="hidden fixed inset-0 bg-gray-800 bg-opacity-50 flex justify-center items-center z-50 ml-0">
  <div class="bg-white p-6 rounded-lg shadow-lg w-96">
    <%= form_with(url: handle_request_path(request), method: :post, id: "popup-form-content", local: true) do |f| %>
      <%= hidden_field_tag :status, "declined" %>
      <div class="mb-4">
        <%= f.label :note, t("view.requests_list.decline_form.note"), class: "block text-gray-700 mb-2 font-bold" %>
        <%= f.text_field :note, placeholder: t("view.requests_list.decline_form.placeholder"), require: true, class: "w-full border rounded-lg px-3 py-2" %>
      </div>
      <div class="flex justify-end">
        <button type="button" id="close-popup" class="bg-gray-500 text-white px-4 py-2 rounded-lg mr-2 hover:bg-gray-400"><%= t "view.requests_list.decline_form.cancel" %></button>
        <%= f.submit t("view.requests_list.decline_form.submit_btn"), class: "bg-blue-500 text-white px-4 py-2 rounded-lg cursor-pointer hover:bg-blue-400" %>
      </div>
    <% end %>
  </div>
</div>
