<% if object.errors.any? %>
  <div class="bg-red-100 border-red-500 text-red-900 p-2 rounded">
    <div class="font-bold">
    <%= t "text.errors" %>
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li class="text-xs ml-3 list-disc"><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
