<%= form_for @comment, html: {class: "w-full"} do |f| %>
  <div class="flex mb-6">
    <%= f.hidden_field :book_id, value: book_id %>
    <%= f.text_field :content,
                     placeholder: t("view.comment.placeholder"),
                     class: "flex-grow border-gray-300 border rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    <%= f.submit t("view.comment.post"),
                 class: "ml-4 bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded" %>
  </div>
<% end %>
