<div class="flex items-start bg-gray-100 p-4 rounded-md shadow-sm">
  <%= image_tag Settings.default_avatar.link, alt: Settings.default_avatar.alt, class: "w-8 h-8 rounded-full mr-4" %>
  <div>
    <p class="font-medium text-blue-800 hover:text-blue-600"><%= link_to comment.user.name, comment.user %></p>
    <p class="text-gray-600 text-base mt-1"><%= comment.content %></p>
    <p class="text-xs text-gray-500"><%=t "view.comment.posted_on", time: time_ago_in_words(comment.created_at) %></p>
  </div>
</div>
