<div class="bg-white overflow-hidden h-full">
  <div class="md:flex">
    <div class="md:w-1/3 p-6 bg-gray-100 flex flex-col items-center rounded-lg">
      <%= image_tag Settings.default_avatar.link, class: "w-48 h-48 rounded-full object-cover shadow-md" %>
      <h1 class="text-2xl font-bold text-gray-800 mt-4 text-center">
        <%= @author.name %>
      </h1>
      <div class="mt-2 text-gray-600 text-center">
        <p class="text-sm">
          <%= t("view.author.birthday") + ": " + birthday(@author) %>
        </p>
      </div>

      <div class="flex items-center justify-center mt-4 w-full px-4">
        <% if current_user %>
          <%= button_to t("view.author.follow"), "#",
              class: "bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition-colors" %>
        <% else %>
          <%= link_to t("view.author.follow"), new_user_session_path,
              class: "block w-full text-center bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition-colors" %>
        <% end %>
      </div>
    </div>

    <div class="md:w-2/3 p-6">
      <div class="mb-6">
        <h2 class="text-xl font-semibold text-gray-700 border-b pb-2 mb-4">
          <%= t("view.author.book_in_system") + ": " + @author.books.count.to_s %>
        </h2>
      </div>
      <div class="mb-6">
        <h2 class="text-xl font-semibold text-gray-700 border-b pb-2 mb-4">
          <%= t("view.author.biography") %>
        </h2>
        <p class="text-gray-600 leading-relaxed">
          <%= biography @author %>
        </p>
      </div>

      <div>
        <h2 class="text-xl font-semibold text-gray-700 border-b pb-2 mb-4">
          <%= t("view.author.written_books") %>
        </h2>
        <% if @written_books.any? %>
          <div class="grid md:grid-cols-2 gap-4 max-h-[370px] overflow-y-auto">
            <%= render partial: "written_book", collection: @written_books, as: :book %>
          </div>
        <% else %>
          <p class="text-gray-500 text-center py-4">
            <%= t("view.author.no_book") %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
